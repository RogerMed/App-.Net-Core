@model IEnumerable<Entities.ToDo>
@{
    ViewData["Title"] = "Home Page";
}


<div class="card">
    <div class="card-header">Tarefas a fazer</div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Tarefa</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
               @foreach (var item in Model)
               {
                   <tr>
                       <td>@item.Tarefa</td>
                       <td>
                           <div class="float-lg-right">
                               @Html.ActionLink("Editar", "Editar", "Home", new { id = item.id }, new { @class = "btn btn-warning btn-sn" })
                               @Html.ActionLink("Remover", "Remover", "Home", new { id = item.id }, new { @class = "btn btn-danger btn-sn" })

                           </div>
                         
                       </td>
                       
                   </tr>
               }
            </tbody>

        </table>
        @Html.ActionLink("Cadastrar Tarefa","Cadastrar","Home",null, new { @class = "btn btn-success btn-sn"})
    </div>


</div>
